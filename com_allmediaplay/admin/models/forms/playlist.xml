<form
	addrulepath="/administrator/components/com_allmediaplay/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="version"
			type="text"
			label="COM_ALLMEDIAPLAY_FORM_PLAYER_VERSION"
